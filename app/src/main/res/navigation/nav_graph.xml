<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">
    <fragment
        android:id="@+id/fragmentSearch"
        android:name="com.practicum.work_test_project.ui.search.fragment.FragmentSearch"
        android:label="FragmentSearch" >
        <action
            android:id="@+id/action_fragmentSearch_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.practicum.work_test_project.ui.details.fragment.DetailsFragment"
        android:label="DetailsFragment"
        >
        <argument
            android:name="course"
            app:argType="com.practicum.work_test_project.domain.entity.Course" />
    </fragment>
    <fragment
        android:id="@+id/fragmentFavorites"
        android:name="com.practicum.work_test_project.ui.favorites.fragment.FragmentFavorites"
        android:label="FragmentFavorites" >
        <action
            android:id="@+id/action_fragmentFavorites_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.practicum.work_test_project.ui.authorization.fragment.AuthFragment"
        android:label="AuthFragment" >
        <action
            android:id="@+id/action_authFragment_to_fragmentSearch"
            app:destination="@id/fragmentSearch" />
        <action
            android:id="@+id/action_authFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.practicum.work_test_project.ui.registration.fragment.RegistrationFragment"
        android:label="RegistrationFragment" >
        <action
            android:id="@+id/action_registrationFragment_to_authFragment"
            app:destination="@id/authFragment" />
    </fragment>
</navigation>