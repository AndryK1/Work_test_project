<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ImageView
            android:id="@+id/previewImage"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_placeholder"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/favoriteButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="56dp"

            android:layout_marginEnd="@dimen/basicEditTextMargin"
            android:background="@drawable/bg_round_white"
            android:scaleType="center"
            android:src="@drawable/ic_favorites_24"
            android:tint="@color/darkGray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/leaveButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="@dimen/basicEditTextMargin"

            android:layout_marginTop="56dp"
            android:background="@drawable/bg_round_white"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_left"
            android:tint="@color/darkGray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/rateIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/minMargin"
            android:layout_marginBottom="@dimen/minMargin"

            android:background="@drawable/bg_blur_16"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/previewImage"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/rateStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_star_12" />

            <TextView
                android:id="@+id/rateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="4.9"
                android:textColor="@color/darkerWhite" />

        </LinearLayout>

        <TextView
            android:id="@+id/publishedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="@dimen/minMargin"
            android:background="@drawable/bg_blur_16"
            android:gravity="center"

            android:paddingStart="@dimen/smallPadding"
            android:paddingEnd="@dimen/smallPadding"
            android:text="22 Мая 2024"
            android:textColor="@color/darkerWhite"
            app:layout_constraintBottom_toBottomOf="@id/previewImage"
            app:layout_constraintStart_toEndOf="@id/rateIcon" />

        <TextView
            android:id="@+id/title"
            style="@style/maxHeaderText"
            android:layout_marginTop="@dimen/basicTextMargin"

            android:text="@string/authorization"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/previewImage" />

        <ImageView
            android:id="@+id/academyLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/basicTextMargin"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_round_white"
            android:src="@drawable/ic_placeholder_45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/authTitle"
            style="@style/smallTextGray"
            android:layout_width="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:text="@string/author"
            app:layout_constraintStart_toEndOf="@id/academyLogo"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/academyName"
            style="@style/normalText"
            android:layout_marginStart="12dp"
            android:text="Merion Academy"
            android:textColor="@color/darkerWhite"
            app:layout_constraintStart_toEndOf="@id/academyLogo"
            app:layout_constraintTop_toBottomOf="@id/authTitle" />

        <Button
            android:id="@+id/startButton"
            style="@style/registrationButton"

            android:layout_marginTop="32dp"
            android:text="@string/startCourse"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/academyLogo" />

        <Button
            android:id="@+id/platformButton"
            style="@style/registrationButton"

            android:layout_marginTop="@dimen/minMargin"
            android:backgroundTint="@color/darkGray"
            android:text="@string/goToPlatform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/startButton" />

        <TextView
            android:id="@+id/descriptionTitle"
            style="@style/maxHeaderText"
            android:layout_marginTop="@dimen/basicTextMargin"

            android:text="@string/aboutTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/platformButton" />

        <TextView
            android:id="@+id/description"
            style="@style/smallTextGray"
            android:layout_marginStart="@dimen/basicTextMargin"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="@dimen/basicTextMargin"
            android:layout_marginBottom="@dimen/minMargin"
            android:ellipsize="end"
            android:lineSpacingExtra="8dp"
            android:text="@string/testDescriptionPlug"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/academyLogo"
            app:layout_constraintTop_toBottomOf="@id/descriptionTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>